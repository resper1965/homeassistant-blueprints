blueprint:
  name: Sync 1 ent with 2 devices by Esper
  description: Turn on/off two switches when another switch is turned on/off
  domain: automation
  input:
    main_switch:
      name: Main Switch
      selector:
        entity:
          domain: switch
    switch1:
      name: Switch 1
      selector:
        entity:
          domain: switch
    switch2:
      name: Switch 2
      selector:
        entity:
          domain: switch
variables:
  main_switch: !input main_switch
  switch1: !input switch1
  switch2: !input switch2

trigger:
  - platform: state
    entity_id:
      - !input main_switch
    from: 'on'
    to: 'off'
  - platform: state
    entity_id:
      - !input main_switch
    from: 'off'
    to: 'on'

condition: "{{ trigger.to_state.context.parent_id == none }}"

action:
  - wait_template: "{{ (as_timestamp(now()) - as_timestamp(this.attributes.last_triggered | default(0)) | int > 3) }}"
    timeout: '00:00:03'
  - service: >
      {% if trigger.to_state.state == 'on' %}
      switch.turn_on
      {% elif trigger.to_state.state == 'off' %}
      switch.turn_off
      {% endif %}
    target:
      entity_id:
        - "{{ switch1 }}"
        - "{{ switch2 }}"

mode: restart
max_exceeded: silent
